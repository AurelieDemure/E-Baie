<?import javafx.scene.control.Button?>
<?import javafx.scene.text.Font?>
<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.codingweek.controller.TchatController">
    <children>
        <fx:include fx:id="navbar" source="navbar.fxml" />
    </children>
    <children>
        <ScrollPane layoutY="150.0" prefHeight="650.0" prefWidth="1200">
            <content>
                <VBox prefHeight="497.0" prefWidth="1054.0">
                    <children>
                        <GridPane prefHeight="400.0" prefWidth="1200.0">
                            <columnConstraints>
                                <ColumnConstraints hgrow="SOMETIMES" maxWidth="343.60003662109375" minWidth="10.0" prefWidth="165.1999969482422" />
                                <ColumnConstraints hgrow="SOMETIMES" maxWidth="621.1999893188477" minWidth="10.0" prefWidth="386.20000000000005" />
                                <ColumnConstraints hgrow="SOMETIMES" maxWidth="498.20001220703136" minWidth="10.0" prefWidth="415.0000000000001" />
                            </columnConstraints>
                            <rowConstraints>
                                <RowConstraints maxHeight="385.6000274658203" minHeight="10.0" prefHeight="340.7999786376953" vgrow="SOMETIMES" />
                            </rowConstraints>
                            <children>
                                <VBox fx:id="contact_list" prefHeight="200.0" prefWidth="100.0">
                                    <children>
                                        <Label fx:id="destinataire" text="Destinataire">
                                            <font>
                                                <Font size="16.0" />
                                            </font>
                                        </Label>
                                    </children>
                                </VBox>
                                <VBox fx:id="receiver_messages" prefHeight="0.0" prefWidth="100.0" GridPane.columnIndex="1">
                                    <children>
                                        <Label fx:id="receiver" text="Receiver">
                                            <font>
                                                <Font size="16.0" />
                                            </font>
                                        </Label>
                                    </children>
                                </VBox>
                                <VBox fx:id="sender_messages" prefHeight="200.0" prefWidth="100.0" GridPane.columnIndex="2">
                                    <children>
                                        <Label fx:id="sender" text="Sender">
                                            <font>
                                                <Font size="16.0" />
                                            </font>
                                        </Label>
                                    </children>
                                </VBox>
                            </children>
                        </GridPane>
                        <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0">
                            <children>
                                <TextField fx:id="message" prefHeight="26.0" prefWidth="222.0" promptText="Ecrire message..." styleClass="text-fieldAccount" stylesheets="@../css/main.css" />
                                <Button fx:id="send" mnemonicParsing="false" onAction="#sendMessage" prefHeight="26.0" prefWidth="75.0" text="Envoyer" styleClass="buttonSave" stylesheets="@../css/main.css" />
                            </children>
                        </HBox>
                    </children>
                </VBox>
            </content>
        </ScrollPane>
    </children>

</AnchorPane>
